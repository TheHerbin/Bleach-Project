{
    "type":"origins:multiple",
    "bar":{
        "type":"origins:resource",
        "min":0,
        "max":5,
        "hud_render":{
            "should_render":true,
            "sprite_location":"origins:textures/gui/resource_bar.png",
            "bar_index":5,
            "condition":{
                "type":"origins:resource",
                "resource":"*:race_reset_bar",
                "comparison":">",
                "compare_to":0
            }
        }
    },
    "unload_bar":{
        "type":"origins:action_over_time",
        "interval":20,
        "entity_action":{
            "type":"origins:change_resource",
            "resource":"*:race_reset_bar",
            "change":-5
        },
        "condition":{
            "type":"origins:sneaking",
            "inverted":true
        }
    },
    "blindness":{
        "type":"origins:shader",
        "shader":"minecraft:shaders/post/sobel.json",
        "condition":{
            "type":"origins:resource",
            "resource":"*:race_reset_bar",
            "comparison":">",
            "compare_to":0
        }
    },
    "use":{
        "type":"origins:action_over_time",
        "interval":20,
        "entity_action":{
            "type":"origins:change_resource",
            "resource":"*:race_reset_bar",
            "change":1
        },
        "condition":{
            "type":"origins:and",
            "conditions":[
                {
                    "type":"origins:sneaking"
                },
                {
                    "type":"origins:equipped_item",
                    "equipment_slot":"mainhand",
                    "item_condition":{
                        "type":"origins:ingredient",
                        "ingredient":{
                            "item":"nether_star"
                        }
                    }
                }
            ]
        }
    },
    "action":{
        "type":"origins:action_over_time",
        "interval":10,
        "entity_action":{
            "type":"origins:and",
            "actions":[
                {
                    "type":"origins:change_resource",
                    "resource":"*:race_reset_bar",
                    "change":-5
                },
                {
                    "type":"origins:execute_command",
                    "command":"playsound minecraft:ui.toast.out master @s ~ ~ ~ 10 .5"
                },
                {
                    "type":"origins:execute_command",
                    "command":"particle minecraft:totem_of_undying ~ ~2 ~ .3 .2 .3 .2 20 force"
                },
                {
                    "type":"origins:execute_command",
                    "command":"effect give @s minecraft:blindness 1 255 true"
                },
                {
                    "type":"origins:execute_command",
                    "command":"title @s subtitle {\"text\":\"You are now Human\",\"bold\":true}"
                },
                {
                    "type":"origins:execute_command",
                    "command":"title @s title {\"text\":\"\"}"
                }
            ]
        },
        "condition":{
            "type":"origins:resource",
            "resource":"*:race_reset_bar",
            "comparison":"==",
            "compare_to":5
        }
    }
}